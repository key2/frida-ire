<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" UpgradeCode="{52C36DDE-FD5F-407e-98F7-BF08A41D470F}" Version="@VERSION@" Language="1033" Name="Gum" Manufacturer="Free Software">
		<Package InstallerVersion="300" Compressed="yes" InstallScope="perMachine"
				Description="Gum for the OAH Build System"
				Manufacturer="Free Software" />
		<Media Id="1" Cabinet="gum_dev_installer.cab" EmbedCab="yes" />

		<Property Id="OAH_BUILD_PRODUCT_DIR">
			<RegistrySearch Id="OAHBuildProductDir"
							Root="HKLM" Key="SOFTWARE\OAH Build" Name="ProductDir"
							Type="raw" />
		</Property>

		<Property Id="FOSS_PRODUCT_DIR">
			<RegistrySearch Id="FOSSProductDir"
							Root="HKLM" Key="SOFTWARE\Free Software" Name="ProductDir"
							Type="raw" />
		</Property>

		<Condition Message="OAH Build was not found. You need to install OAH Build before installing [ProductName].">
			<![CDATA[Installed OR OAH_BUILD_PRODUCT_DIR]]>
		</Condition>

		<Condition Message="OAH Build was found, but where to install FOSS components is unknown. You need to reinstall OAH Build before installing [ProductName].">
			<![CDATA[Installed OR FOSS_PRODUCT_DIR]]>
		</Condition>

		<!-- Directory structure -->
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="FOSS_PRODUCT_DIR">
				<Merge Id='Gum' Language='1033' SourceFile='Win32\gum.msm' DiskId='1' />
				<Merge Id='GumDev' Language='1033' SourceFile='Win32\gum-dev.msm' DiskId='1' />

				<Directory Id="ModuleRedist" Name="redist">
					<Component Id="GumDevRedist" Guid="{5835F5E4-45E4-49fe-9037-2DC62856C9C9}">
						<File Id="gum_dev.msm" Source="Win32\gum-dev.msm" />
					</Component>
				</Directory>
			</Directory>
		</Directory>

		<Feature Id="Binaries" Title="Gum Binaries" Level="1">
			<MergeRef Id='Gum' />
		</Feature>

		<Feature Id="GumDev" Title="Gum .h, .lib, .pc and redist files" Level="1">
			<MergeRef Id='GumDev' />
			<ComponentRef Id="GumDevRedist" />
		</Feature>
	</Product>
</Wix>
